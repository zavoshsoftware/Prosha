                                {
                                    <li>
                                        <img src="@slider.ImageUrl" alt="@slider.Alt" />
                                        <p class="flex-caption">@slider.TitleSrt</p>
                                    </li>
                                }
                            </ul>
                        </div>
                    </section>

                </div>
                @*<div class="col-img  bg-overlay">
                        <div class="bg-section">
                            <img src="@Model.FeaturImage.ImageUrl" alt="@Model.FeaturImage.Title" />
                        </div>
                    </div>*@
            </div>

            <div class="col-xs-12 col-sm-12 col-md-6 col-content pl-100 features-home">
                <div class="row">
                    @foreach (var featuresText in Model.FeaturesTexts)
                    {
                        <div class="col-xs-12 col-sm-6 col-md-6 mb-50">
                            <div class="feature-panel">
                                <div class="feature--icon">
                                    <i class="lnr @featuresText.SummerySrt"></i>
                                </div>
                                <div class="feature--content">
                                    <h3>
                                        @featuresText.TitleSrt
                                    </h3>
                                    @Html.Raw(featuresText.BodySrt)
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>

        </div>
    </div>
</section>

<section id="banner4" class="skills skills-2 pt-0 pb-0">
    <div class="container-fluid">
        <div class="row">

            <div class="col-xs-12 col-sm-12 col-md-6 col-content pl-100 features-home">
                <div class="heading heading-8 mb-50 heading-font-p">
                    <h2 class="heading--title">@Model.PosInfo.TitleSrt</h2>
                    <div class="divider--line">
                        <i class="divider divider--1"></i>
                        <i class="divider divider--2"></i>
                        <i class="divider divider--3"></i>
                        <i class="divider divider--4"></i>
                    </div>
                    @Html.Raw(Model.PosInfo.BodySrt)

                    <a href="/product/pos-software" class="btn btn--primary btn--bordered btn--block">@Resources.Label.ShowFeatures</a>
                </div>

            </div>

            <div class="col-xs-12 col-sm-12 col-md-6 pr-0 pl-0">
                <div class="col-img  bg-overlay  mobile-app" id="main" role="main">
                    <section class="slider sliderf">
                        <div class="flexslider">
                            <ul class="slides">
                                @foreach (var slider in Model.MiniSliders)
