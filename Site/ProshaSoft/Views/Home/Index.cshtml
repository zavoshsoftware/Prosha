</section>


<section id="counter1" class="counter bg-white">
    <div class="container">
        <div class="row">
            <div id="hotspotImg" class="responsive-hotspot-wrap row col-md-7">
                <img src="~/assets/images/map31.png" class="img-responsive" alt="" width="620" height="220" />

                @foreach (var mapDetail in Model.MapDetails)
                {
                    <div class="hot-spot" x="@mapDetail.X" y="@mapDetail.Y">
                        <div class="circle"></div>
                        <div class="tooltip">
                            <div class="text-row">
                                <h5>@mapDetail.TitleSrt</h5>
                                @if (!string.IsNullOrEmpty(mapDetail.FirstLineSrt))
                                {
                                    <p><i class="fa fa-users"></i>@mapDetail.FirstLineSrt</p>
                                }
                                @if (!string.IsNullOrEmpty(mapDetail.SecondtLineSrt))
                                {
                                    <p><i class="fa fa-compass"></i>@mapDetail.SecondtLineSrt</p>
                                }
                            </div>
                        </div>
                    </div>
                }

            </div>

            <div class="col-md-5 features-home">
                <div class="heading heading-8 mb-50 heading-font-p">
                    <h2 class="heading--title">@Model.MapDescription.TitleSrt</h2>
                    <div class="divider--line">
                        <i class="divider divider--1"></i>
                        <i class="divider divider--2"></i>
                        <i class="divider divider--3"></i>
                        <i class="divider divider--4"></i>
                    </div>
                    @Html.Raw(Model.MapDescription.BodySrt)
                </div>
            </div>
        </div>
    </div>
</section>

<section id="clients" class="clients clients-carousel bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="carousel carousel-dots" data-slide="6" data-slide-res="2" data-autoplay="true" data-nav="false" data-dots="false" data-space="30" data-loop="true" data-speed="800">
                    @foreach (var customer in Model.Costumers)
                    {
                        <div class="client">
                            <img class="center-block" src="@customer.ImageUrl" alt="@customer.Alt">
                        </div>
                    }

                </div>
            </div><!-- .col-md-12 end -->
        </div>
        <!-- .row end -->
    </div>
    <!-- .container end -->
</section>
<section id="statics" class="bg-white">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @foreach (var number in Model.Numbers)
                {
                    <div class="col-xs-6 col-sm-3 col-md-3">
                        <div class="count-box text-center">
                            <div class="count-icon">
                                <i class="lnr @number.SummerySrt"></i>
                            </div>
                            <div class="counting">@number.Body</div>
                            <div class="count-title">@number.TitleSrt</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<section id="blog" class="blog blog-carousel">
    <div class="container">
        <div class="row clearfix">
            <div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2">
                <div class="heading heading-2 mb-40 text--center">
                    <p class="heading--subtitle">@Resources.Label.HomeArticle</p>
                    <h2 class="heading--title">@Resources.Label.LatestArticles</h2>
                    <div class="divider--line">
                        <i class="divider divider--1"></i>
                        <i class="divider divider--2"></i>
                        <i class="divider divider--3"></i>
                        <i class="divider divider--4"></i>
                    </div>
                    <p class="heading--desc">@Resources.Label.LatestArticlesTitle</p>
                </div>
            </div><!-- .col-md-8 end -->
        </div>
        <div class="row">
            <div class="carousel carousel-dots" data-slide="3" data-slide-res="2" data-autoplay="true" data-nav="false" data-dots="true" data-space="30" data-loop="true" data-speed="800">

                @foreach (var blog in Model.LatestBlogs)
                {


                    <div class="blog-entry">
                        <div class="entry--img">
	                        <a href="/blog/@blog.UrlParam">
		                        @if (string.IsNullOrEmpty(blog.ImageUrlThumb))
		                        {
			                        <img src="@blog.ImageUrl" alt="@blog.TitleSrt"/>
														}
														else
														{
																<img src="@blog.ImageUrlThumb" alt="@blog.TitleSrt" />
														}
	                        </a>
                        </div>
                        <div class="entry--meta">
                            <span>@blog.CreationDateStr</span>   /
                            <span><a href="#">@blog.Visit @Resources.Label.Visit</a></span>
                        </div>
                        <div class="entry--title">
                            <h4><a href="/blog/@blog.UrlParam">@blog.TitleSrt</a></h4>
                        </div>
                        <div class="entry--content">
                            @blog.SummerySrt
                        </div>
                        <div class="entry--more">
                            <a href="/blog/@blog.UrlParam">@Resources.Label.ReadMore</a>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</section>

